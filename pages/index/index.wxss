/**index.wxss**/
/* 整体布局 */
.container {
  padding: 20rpx;
  text-align: center;
}

/* 按钮样式 */
button {
  width: 250rpx;
  height: 60rpx;
  margin: 10rpx;
  background-color: #007aff;
  color: white;
  font-size: 16px;
  border-radius: 5rpx;
}

/* 文本区域样式 */
.text-container {
  margin-top: 20rpx;
  padding: 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  background-color: #f9f9f9;
}

.text-content {
  font-size: 18px;
  color: #333;
}